<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".MainActivity" >

    <EditText android:id="@+id/name"
        android:layout_width="200dip"
        android:layout_height="50dip"
        android:hint="Person Name"/>

    <EditText android:id="@+id/surname"
        android:layout_width="200dip"
        android:layout_height="50dip"
        android:hint="Person Surname"/>

    <EditText android:id="@+id/address"
        android:layout_width="200dip"
        android:layout_height="50dip"
        android:hint="Person Address"/>

    <Button android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="createPerson"
        android:text="Create Person"/>

    <LinearLayout android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" android:gravity="center">

        <EditText android:id="@+id/search"
            android:layout_width="200dip"
            android:layout_height="50dip"
            android:hint="Search"/>

        <Button android:id="@+id/list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="getPersons"
            android:text="LIST"/>
    </LinearLayout>

    <ListView android:id="@+id/contacts"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>


</LinearLayout>